<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidx.cardview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/my_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/colorPrimary"
                    android:text="Weekly Goal:"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_below="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <EditText
                android:padding="2dp"
                android:id="@+id/text1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text="-300"
                android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text2"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text4"
                android:text="Protein"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/text5"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/text6"
                android:text="300"
                android:textSize="20sp"
                android:inputType="numberDecimal"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_below="@+id/linear2"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/dismiss"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:elevation="5dp"
                    fancy:mfb_borderColor="@color/black"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="@color/white"
                    fancy:mfb_focusColor="@color/colorPrimaryDark"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="1dp"
                    fancy:mfb_textSize="16sp"
                    fancy:mfb_text="Dismiss"
                    fancy:mfb_textColor="@color/black" />
                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/save"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:elevation="5dp"
                    fancy:mfb_borderColor="@color/black"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="@color/white"
                    fancy:mfb_focusColor="@color/colorPrimaryDark"
                    fancy:mfb_radius="1dp"
                    fancy:mfb_textSize="18sp"
                    fancy:mfb_text="Save"
                    fancy:mfb_textColor="@color/black" />

            </LinearLayout>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>