<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="Workout Detail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/upload"
            android:layout_toLeftOf="@+id/save"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_file_upload"/>

        <ImageView
            android:id="@+id/save"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_save"/>

    </RelativeLayout>

    <op27no2.fitness.Centurion2.FancyScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_stats"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/date"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="January 7, 2020"
                android:textColor="#000000"
                />

            <Spinner
                android:id="@+id/type"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:entries="@array/workout_types"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_below="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Title:"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/workout_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Daily Run"
                        android:textColor="#000000"
                        android:selectAllOnFocus="true"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Description:"
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/workout_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:hint="description"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                >
                <TextView
                    android:id="@+id/duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textSize="22sp"
                    android:text="Duration:"
                    android:textColor="#000000"
                    />
                <EditText
                    android:inputType="number"
                    android:id="@+id/duration_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:imeOptions="actionNext"
                    android:hint="0"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text=":"
                    android:textColor="#000000"
                    />
                <EditText
                    android:inputType="number"
                    android:id="@+id/duration_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="00"
                    android:imeOptions="actionNext"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text=":"
                    android:textColor="#000000"
                    />
                <EditText
                    android:inputType="number"
                    android:id="@+id/duration_seconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:hint="00"
                    android:imeOptions="actionNext"
                    android:nextFocusDown="@+id/distance_value"
                    android:textColor="#000000"
                    android:selectAllOnFocus="true"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/title"
                android:id="@+id/row1"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgrey" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Distance:"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/distance_value"
                            android:inputType="numberDecimal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="0"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/cals_value"
                            android:textColor="#000000"
                            android:selectAllOnFocus="true"
                            />
                        <TextView
                            android:id="@+id/distance_units"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="miles"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgrey" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/pace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Pace:"
                        android:textColor="#000000"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/pace_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:text="8:00"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/pace_units"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="/mi"
                            android:textColor="#000000"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgrey" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/cals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Calories:"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/cals_value"
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:minWidth="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="0"
                        android:imeOptions="actionDone"
                        android:textColor="#000000"
                        android:selectAllOnFocus="true"
                        />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

