<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Detail"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/save"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_save"/>

    </RelativeLayout>

    <op27no2.fitness.Centurion.FancyScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fancy="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_stats"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FAFAFA"
            >
    <TextView
        android:id="@+id/date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="January 7, 2020"
        android:textColor="#000000"
        />


    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Title:"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/workout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Daily Run"
                android:textColor="#000000"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Description:"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/workout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="description"
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/title"
        android:id="@+id/row1"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Duration:"
                android:textColor="#000000"
                />
            <EditText
                android:inputType="time"
                android:id="@+id/duration_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0:00"
                android:textColor="#000000"
                />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightgrey" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Distance:"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/distance_value"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0 Miles"
                android:textColor="#000000"
                />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightgrey" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Pace:"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/pace_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="8:00 /mi"
                android:textColor="#000000"
                />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightgrey" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/cals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Calories:"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/cals_value"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="0"
                android:textColor="#000000"
                />
        </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_below="@+id/card_view_stats"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.mapbox.mapboxsdk.maps.MapView
        android:layout_below="@+id/toolbar"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/locate"
            android:padding="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_white_plain"
            android:gravity="center"
            android:clickable="true"
            android:src="@drawable/ic_gps_fixed"
            />
            <ImageView
                android:id="@+id/edit_map"
                android:padding="15dp"
                android:layout_above="@+id/locate"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_white_plain"
                android:gravity="center"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_edit"
                />

            <ImageView
                android:id="@+id/view_angle"
                android:padding="15dp"
                android:layout_above="@+id/view_rotation"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="22dp"
                android:layout_height="280dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_rotate"
                />


            <ImageView
                android:id="@+id/view_zoom"
                android:padding="15dp"
                android:layout_above="@+id/view_rotation"
                android:layout_toLeftOf="@id/view_angle"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="22dp"
                android:layout_height="280dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_rotate"
                />

            <ImageView
                android:id="@+id/zoom_bar"
                android:padding="15dp"
                android:layout_above="@+id/view_rotation"
                android:layout_toLeftOf="@id/view_angle"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="22dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:elevation="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_rotate"
                />


            <ImageView
                android:id="@+id/erase_button"
                android:rotation="270"
                android:padding="15dp"
                android:layout_below="@+id/extrude_button"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_white_plain"
                android:gravity="center"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                />

            <ImageView
                android:id="@+id/extrude_button"
                android:rotation="270"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_white_plain"
                android:gravity="center"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_sort_by_size"
                />



            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/lock_window"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/start_run"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:elevation="5dp"
                fancy:mfb_borderColor="@color/black"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="@color/white"
                fancy:mfb_focusColor="@color/colorPrimaryDark"
                fancy:mfb_iconFont="fontawesome.ttf"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="1dp"
                fancy:mfb_textSize="18sp"
                fancy:mfb_text="Unlock"
                fancy:mfb_textColor="@color/black" />

            <ImageView
                android:id="@+id/view_rotation"
                android:padding="15dp"
                android:layout_toLeftOf="@+id/view_rotation2"
                android:layout_above="@+id/edit_map"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="22dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_rotate"
                />
            <ImageView
                android:id="@+id/view_rotation2"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/edit_map"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="22dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:elevation="5dp"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_rotate"
                />


            <TextView
                android:id="@+id/counttime"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="0:00"
                android:textSize="70sp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/distance"
                android:layout_below="@+id/counttime"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text=""
                android:textSize="30sp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />




    </RelativeLayout>
    </FrameLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
</op27no2.fitness.Centurion.FancyScrollView>
</RelativeLayout>