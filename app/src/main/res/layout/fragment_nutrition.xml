<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="false"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/arrow_left"
            android:padding="20dp"
            android:layout_toLeftOf="@+id/toolbar_date"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_myarrow_left"/>


        <TextView
            android:id="@+id/toolbar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/arrow_right"
            android:padding="20dp"
            android:layout_toRightOf="@+id/toolbar_date"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_myarrow_right"/>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/graph"
        android:layout_below="@+id/toolbar"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:background="@drawable/background_border">
        <LinearLayout
            android:layout_below="@+id/toolbar"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:id="@+id/graph1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_graph"
        android:layout_below="@+id/graph"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:background="@drawable/background_border">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/graph2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:gravity="center"
        android:layout_below="@+id/bottom_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/button_minus"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_remove"/>
        <ImageView
            android:id="@+id/button_minus_small"
            android:padding="15dp"
            android:layout_below="@+id/button_minus"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_remove"/>
        <ImageView
            android:id="@+id/button_plus_small"
            android:padding="15dp"
            android:layout_toRightOf="@+id/button_minus"
            android:layout_below="@+id/button_plus"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_add"/>
        <ImageView
            android:id="@+id/button_plus"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_add"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_below="@+id/buttons"
        android:layout_toLeftOf="@+id/right_content"
        android:fastScrollEnabled="false"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>