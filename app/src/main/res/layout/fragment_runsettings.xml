<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="false"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:animateLayoutChanges="false"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Settings"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_below="@+id/toolbar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="1dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:contentPadding="10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardMaxElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:text="Listed Types"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                />
                <ImageView
                    android:id="@+id/divider1"
                    android:layout_below="@+id/text1"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_height="1dp"></ImageView>

            <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/divider1"
            android:id="@+id/my_recycler_view_active"
            android:fastScrollEnabled="false"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:contentPadding="10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardMaxElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:text="Stored Types"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                />
            <ImageView
                android:id="@+id/divider2"
                android:layout_below="@+id/text2"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="1dp"></ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/divider2"
            android:id="@+id/my_recycler_view_options"
            android:fastScrollEnabled="false"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:contentPadding="10dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="2dp"
            card_view:cardMaxElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Configure"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    />
                <ImageView
                    android:id="@+id/divider3"
                    android:layout_below="@+id/text3"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_height="1dp"></ImageView>

                <LinearLayout
                    android:id="@+id/name_layout"
                    android:gravity="bottom"
                    android:layout_below="@+id/divider3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Activity Name:"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=""
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/active_lin"
                    android:gravity="bottom"
                    android:layout_below="@+id/name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="List on Main Page:"
                        android:textColor="#000000"
                        />
                    <Switch
                        android:id="@+id/list_switch"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/spinners1"
                    android:gravity="bottom"
                    android:layout_below="@+id/active_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Distance Units:"
                        android:textColor="#000000"
                        />
                    <Spinner
                        android:id="@+id/spinner_distance"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="22sp"
                        android:entries="@array/distance_array"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/spinners2"
                    android:gravity="bottom"
                    android:layout_below="@+id/spinners1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Pace Units:"
                        android:textColor="#000000"
                        />
                    <Spinner
                        android:id="@+id/spinner_pace"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="22sp"
                        android:entries="@array/workout_paces"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/spinner3"
                    android:layout_below="@+id/spinners2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="Cal Burn:"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/cal_factor"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="1.62"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_marginRight="5dp"
                        android:id="@+id/weight_factor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="x Bodyweight:"
                        android:textColor="#000000"
                        />
                    <Spinner
                        android:id="@+id/cal_units"
                        android:layout_marginTop="5dp"
                        android:textSize="22sp"
                        android:layout_below="@+id/divider3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/calorie_burn_type"
                        />
                </LinearLayout>
                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/delete_button"
                    android:layout_below="@+id/spinner3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:elevation="5dp"
                    fancy:mfb_borderColor="@color/black"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="@color/white"
                    fancy:mfb_focusColor="@color/colorPrimaryDark"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="1dp"
                    fancy:mfb_textSize="18sp"
                    fancy:mfb_text="Delete"
                    fancy:mfb_textColor="@color/black" />

                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/save_button"
                    android:layout_below="@+id/spinner3"
                    android:layout_toRightOf="@+id/delete_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:elevation="5dp"
                    fancy:mfb_borderColor="@color/black"
                    fancy:mfb_borderWidth="1dp"
                    fancy:mfb_defaultColor="@color/white"
                    fancy:mfb_focusColor="@color/colorPrimaryDark"
                    fancy:mfb_iconFont="fontawesome.ttf"
                    fancy:mfb_iconPosition="left"
                    fancy:mfb_radius="1dp"
                    fancy:mfb_textSize="18sp"
                    fancy:mfb_text="Save"
                    fancy:mfb_textColor="@color/black" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/spinner_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/backup_database"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:elevation="5dp"
            fancy:mfb_borderColor="@color/black"
            fancy:mfb_borderWidth="1dp"
            fancy:mfb_defaultColor="@color/white"
            fancy:mfb_focusColor="@color/colorPrimaryDark"
            fancy:mfb_iconFont="fontawesome.ttf"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="1dp"
            fancy:mfb_textSize="18sp"
            fancy:mfb_text="Backup"
            fancy:mfb_textColor="@color/black" />
        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/restore_database"
            android:layout_toRightOf="@+id/start_run"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:elevation="5dp"
            fancy:mfb_borderColor="@color/black"
            fancy:mfb_borderWidth="1dp"
            fancy:mfb_defaultColor="@color/white"
            fancy:mfb_focusColor="@color/colorPrimaryDark"
            fancy:mfb_iconFont="fontawesome.ttf"
            fancy:mfb_iconPosition="left"
            fancy:mfb_radius="1dp"
            fancy:mfb_textSize="18sp"
            fancy:mfb_text="Restore"
            fancy:mfb_textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>

</RelativeLayout>